{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "outputMode": "new-only",
      "dependsOn": ["^build", "lint", "types"]
    },
    "lint": {
      "outputMode": "new-only",
      "dependsOn": ["^lint"]
    },
    "test": {
      "outputMode": "new-only",
      "dependsOn": ["^test"]
    },
    "types": {
      "outputMode": "new-only",
      "dependsOn": ["^types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
